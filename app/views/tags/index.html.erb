<h1>All Tags</h1>

<ul>
  <% @tags.each do |tag| %>
    <li>
	  <%= link_to tag.name, tag_path(tag) %>
      <% if logged_in? %>
        &nbsp;&nbsp;<%= link_to "delete", tag_path(tag), method: :delete, data: {confirm: "Really delete the tag?"}%>
	  <% end %>
    </li>
  <% end %>
</ul>
